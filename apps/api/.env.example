# Server Configuration
PORT=3001

# CORS Configuration
# Comma-separated list of allowed origins for production
# For development, defaults to http://localhost:5173
# For production, set to your frontend URL(s)
# Example: ALLOWED_ORIGINS=https://yourapp.vercel.app,https://www.yourapp.com
ALLOWED_ORIGINS=http://localhost:5173

# Firebase Admin SDK
# Place your firebase-service-account.json file in the api directory
FIREBASE_ADMIN_PROJECT_ID=your-project-id

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/world-builder

# Cloudinary Configuration
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Note: CLOUDINARY_URL is an alternative format that combines all three:
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
